---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import BasePageLayout from "./BasePageLayout.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<BasePageLayout title={title} description={description}>
	<article>
		<!-- Hero Image -->
		{
			heroImage && (
				<div class="default-container mb-8">
					<div class="relative overflow-hidden rounded-2xl aspect-video md:aspect-[21/9]">
						<Image
							width={1200}
							height={600}
							src={heroImage}
							alt={title}
							class="w-full h-full object-cover"
						/>
					</div>
				</div>
			)
		}

		<!-- Article Content -->
		<div class="default-container">
			<div class="max-w-4xl mx-auto">
				<!-- Header -->
				<header class="text-center mb-12">
					<div
						class="flex items-center justify-center gap-4 text-sm text-gray-500 mb-4"
					>
						<time datetime={pubDate.toISOString()}>
							{
								pubDate.toLocaleDateString("ru-RU", {
									year: "numeric",
									month: "long",
									day: "numeric",
								})
							}
						</time>
						{
							updatedDate && (
								<>
									<span>•</span>
									<span class="text-gray-400">
										Обновлено:{" "}
										<time
											datetime={updatedDate.toISOString()}
										>
											{updatedDate.toLocaleDateString(
												"ru-RU",
												{
													year: "numeric",
													month: "long",
													day: "numeric",
												}
											)}
										</time>
									</span>
								</>
							)
						}
					</div>
					<h1
						class="text-4xl md:text-5xl font-bold text-gray-900 mb-6"
					>
						{title}
					</h1>
					{
						description && (
							<p class="text-xl text-gray-600 leading-relaxed max-w-3xl mx-auto">
								{description}
							</p>
						)
					}
				</header>

				<!-- Article Body -->
				<div class="prose prose-lg max-w-none">
					<div class="border-t border-gray-200 pt-8">
						<slot />
					</div>
				</div>
			</div>
		</div>
	</article>
</BasePageLayout>

<style is:global>
	.prose {
		color: #374151;
		line-height: 1.75;
	}

	.prose h2 {
		font-size: 1.875em;
		font-weight: 700;
		color: #111827;
		margin-top: 2em;
		margin-bottom: 1em;
		line-height: 1.3;
	}

	.prose h3 {
		font-size: 1.5em;
		font-weight: 600;
		color: #111827;
		margin-top: 1.6em;
		margin-bottom: 0.8em;
		line-height: 1.4;
	}

	.prose p {
		margin-bottom: 1.5em;
	}

	.prose a {
		color: #2563eb;
		text-decoration: none;
		font-weight: 500;
	}

	.prose a:hover {
		color: #1d4ed8;
		text-decoration: underline;
	}

	.prose code {
		background-color: #f3f4f6;
		padding: 0.2em 0.4em;
		border-radius: 0.375rem;
		font-size: 0.875em;
		font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, "Roboto Mono",
			monospace;
	}

	.prose pre {
		background-color: #1f2937;
		color: #f9fafb;
		padding: 1.5em;
		border-radius: 0.75rem;
		overflow-x: auto;
		margin: 1.5em 0;
	}

	.prose pre code {
		background: none;
		padding: 0;
		color: inherit;
	}

	.prose blockquote {
		border-left: 4px solid #2563eb;
		padding-left: 1.5em;
		margin: 1.5em 0;
		font-style: italic;
		color: #6b7280;
	}

	.prose ul,
	.prose ol {
		margin: 1.5em 0;
		padding-left: 1.5em;
	}

	.prose li {
		margin-bottom: 0.5em;
	}

	.prose img {
		border-radius: 0.75rem;
		margin: 2em 0;
	}

	.prose hr {
		border: none;
		border-top: 1px solid #e5e7eb;
		margin: 2em 0;
	}
</style>
