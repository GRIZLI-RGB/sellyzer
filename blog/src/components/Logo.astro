---
interface Props {
	onlyIcon?: boolean;
	size?: number;
}

const { onlyIcon = false, size = 48 } = Astro.props;
---

<div class="flex items-center gap-2.5">
	<img
		class="block"
		src={`${import.meta.env.BASE_URL}/logo.svg`}
		alt="Sellyzer"
		width={size}
		height={size}
	/>

	{!onlyIcon && <span class="text-xl text-primary font-semibold">Sellyzer</span>}
</div>
