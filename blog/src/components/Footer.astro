---
import Logo from "./Logo.astro";

const today = new Date();
---

<footer>
	<div class="footer-inner">
		<div class="footer-logo">
			<Logo />

			<p>
				AI-инструменты для продавцов маркетплейсов. Помогаем увеличить
				продажи через умный анализ товаров и конкурентов.
			</p>
		</div>

		<div class="footer-social">
			<a
				href="https://t.me/sellyzer_support"
				target="_blank"
				rel="noreferrer"
				aria-label="Telegram"
			>
				<svg
					stroke="currentColor"
					fill="currentColor"
					stroke-width="0"
					viewBox="0 0 496 512"
					height="24"
					width="24"
					xmlns="http://www.w3.org/2000/svg"
					><path
						d="M248 8C111 8 0 119 0 256s111 248 248 248 248-111 248-248S385 8 248 8zm121.8 169.9l-40.7 191.8c-3 13.6-11.1 16.9-22.4 10.5l-62-45.7-29.9 28.8c-3.3 3.3-6.1 6.1-12.5 6.1l4.4-63.1 114.9-103.8c5-4.4-1.1-6.9-7.7-2.5l-142 89.4-61.2-19.1c-13.3-4.2-13.6-13.3 2.8-19.7l239.1-92.2c11.1-4 20.8 2.7 17.2 19.5z"
					></path></svg
				>
				<span>Telegram</span>
			</a>
			<a href="mailto:support@sellyzer.ru" aria-label="Email">
				<svg
					stroke="currentColor"
					fill="currentColor"
					stroke-width="0"
					viewBox="0 0 512 512"
					height="24"
					width="24"
					xmlns="http://www.w3.org/2000/svg"
					><path
						d="M502.3 190.8c3.9-3.1 9.7-.2 9.7 4.7V400c0 26.5-21.5 48-48 48H48c-26.5 0-48-21.5-48-48V195.6c0-5 5.7-7.8 9.7-4.7 22.4 17.4 52.1 39.5 154.1 113.6 21.1 15.4 56.7 47.8 92.2 47.6 35.7.3 72-32.8 92.3-47.6 102-74.1 131.6-96.3 154-113.7zM256 320c23.2.4 56.6-29.2 73.4-41.4 132.7-96.3 142.8-104.7 173.4-128.7 5.8-4.5 9.2-11.5 9.2-18.9v-19c0-26.5-21.5-48-48-48H48C21.5 64 0 85.5 0 112v19c0 7.4 3.4 14.3 9.2 18.9 30.6 23.9 40.7 32.4 173.4 128.7 16.8 12.2 50.2 41.8 73.4 41.4z"
					></path></svg
				>
				<span>Email</span>
			</a>
		</div>

		<div class="footer-bottom">
			<span>© {today.getFullYear()} Sellyzer. Все права защищены.</span>
		</div>
	</div>
</footer>

<style>
	footer {
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		text-align: center;
		padding: 1.2em 1em;
	}

	.footer-inner {
		max-width: 720px;
		margin: auto;
	}

	.footer-logo {
		display: flex;
		align-items: center;
		flex-direction: column;
	}

	.footer-logo p {
		margin-top: 0.5em;
		color: rgb(var(--gray-dark));
	}

	.footer-social {
		margin: 1.5em 0;
		display: flex;
		justify-content: center;
		gap: 1.5em;
	}

	.footer-social a {
		color: rgb(var(--gray-dark));
		text-decoration: none;
		transition: color 0.2s ease;
		display: inline-flex;
		align-items: center;
		gap: 0.5em;
		line-height: 125%;
	}

	.footer-social a:hover {
		color: var(--accent);
	}

	.footer-bottom {
		margin-top: 1em;
	}
</style>
