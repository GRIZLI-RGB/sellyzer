---
import Logo from "./Logo.astro";

const today = new Date();
---

<footer class="bg-white border-t border-neutral-200 pt-9 pb-8">
	<div class="default-container">
		<div
			class="flex flex-col lg:flex-row justify-between items-center gap-8 mb-8"
		>
			<div class="flex items-center gap-3">
				<Logo onlyIcon size={32} />
				<div class="flex flex-col">
					<span class="text-lg font-bold leading-[100%]">
						Sellyzer
					</span>
					<span
						class="text-xs text-gray-500 font-medium leading-[100%]"
					>
						Блог
					</span>
				</div>
			</div>

			<nav class="flex items-center gap-6 flex-wrap justify-center">
				<a
					href="/blog"
					class="text-sm text-gray-600 hover:text-blue-600 transition-base"
				>
					Главная
				</a>
				<a
					href="/blog/guides"
					class="text-sm text-gray-600 hover:text-blue-600 transition-base"
				>
					Гайды
				</a>
				<a
					href="/blog/resources"
					class="text-sm text-gray-600 hover:text-blue-600 transition-base"
				>
					Ресурсы
				</a>
				<a
					href="/blog/about"
					class="text-sm text-gray-600 hover:text-blue-600 transition-base"
				>
					О проекте
				</a>
				<a
					href="https://sellyzer.ru"
					target="_blank"
					class="text-sm text-gray-600 hover:text-blue-600 transition-base font-semibold"
				>
					Платформа →
				</a>
			</nav>
		</div>

		<div
			class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-8 border-t border-neutral-200"
		>
			<div class="text-sm text-gray-500">
				© {today.getFullYear()} Sellyzer. Все права защищены.
			</div>

			<div class="flex items-center gap-4">
				<a
					href="https://t.me/sellyzer_support"
					target="_blank"
					rel="noreferrer"
					class="text-gray-400 hover:text-blue-600 transition-base text-sm font-semibold flex items-center gap-2"
					aria-label="Telegram"
				>
					<svg
						stroke="currentColor"
						fill="currentColor"
						stroke-width="0"
						viewBox="0 0 496 512"
						height="20"
						width="20"
						xmlns="http://www.w3.org/2000/svg"
						><path
							d="M248 8C111 8 0 119 0 256s111 248 248 248 248-111 248-248S385 8 248 8zm121.8 169.9l-40.7 191.8c-3 13.6-11.1 16.9-22.4 10.5l-62-45.7-29.9 28.8c-3.3 3.3-6.1 6.1-12.5 6.1l4.4-63.1 114.9-103.8c5-4.4-1.1-6.9-7.7-2.5l-142 89.4-61.2-19.1c-13.3-4.2-13.6-13.3 2.8-19.7l239.1-92.2c11.1-4 20.8 2.7 17.2 19.5z"
						></path></svg
					>
					<span>Telegram</span>
				</a>
				<a
					href="mailto:support@sellyzer.ru"
					class="text-gray-400 hover:text-blue-600 transition-base text-sm font-semibold flex items-center gap-2"
					aria-label="Email"
				>
					<svg
						stroke="currentColor"
						fill="currentColor"
						stroke-width="0"
						viewBox="0 0 512 512"
						height="20"
						width="20"
						xmlns="http://www.w3.org/2000/svg"
						><path
							d="M502.3 190.8c3.9-3.1 9.7-.2 9.7 4.7V400c0 26.5-21.5 48-48 48H48c-26.5 0-48-21.5-48-48V195.6c0-5 5.7-7.8 9.7-4.7 22.4 17.4 52.1 39.5 154.1 113.6 21.1 15.4 56.7 47.8 92.2 47.6 35.7.3 72-32.8 92.3-47.6 102-74.1 131.6-96.3 154-113.7zM256 320c23.2.4 56.6-29.2 73.4-41.4 132.7-96.3 142.8-104.7 173.4-128.7 5.8-4.5 9.2-11.5 9.2-18.9v-19c0-26.5-21.5-48-48-48H48C21.5 64 0 85.5 0 112v19c0 7.4 3.4 14.3 9.2 18.9 30.6 23.9 40.7 32.4 173.4 128.7 16.8 12.2 50.2 41.8 73.4 41.4z"
						></path></svg
					>
					<span>Email</span>
				</a>
			</div>
		</div>
	</div>
</footer>
