---
import Logo from "./Logo.astro";
import HeaderLink from "./HeaderLink.astro";
---

<header class="header">
	<nav class="nav">
		<a href="/" class="logo-wrap">
			<Logo />
		</a>

		<div class="links">
			<HeaderLink href="/">Главная</HeaderLink>
			<HeaderLink href="/guides">Гайды</HeaderLink>
			<HeaderLink href="/resources">Ресурсы</HeaderLink>
			<HeaderLink href="/about">О проекте</HeaderLink>

			<a
				target="_blank"
				href="https://sellyzer.ru"
				class="app-link"
				rel="noopener noreferrer"
			>
				<img src={`${import.meta.env.BASE_URL}/logo.svg`} alt="Sellyzer logo" />
				Платформа
			</a>
		</div>
	</nav>
</header>

<style>
	:root {
		--accent: #2337ff;
		--accent-hover: #1e2fcc;
		--text: #1f2937;
		--bg: #ffffff;
		--border: rgba(0, 0, 0, 0.06);
	}

	.header {
		background: var(--bg);
		border-bottom: 1px solid var(--border);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
		padding: 0 1.25rem;
		position: sticky;
		top: 0;
		z-index: 50;
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		transition:
			background 0.3s ease,
			border-color 0.3s ease,
			box-shadow 0.3s ease;
	}

	.nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1280px;
		margin: 0 auto;
	}

	.logo-wrap {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
	}

	.links {
		display: flex;
		align-items: center;
		gap: 1.5rem;
	}

	.links a {
		font-size: 1rem;
		font-weight: 500;
		color: var(--text);
		text-decoration: none;
		padding: 0.4rem 0.2rem;
		border-bottom: 2px solid transparent;
		transition:
			color 0.2s ease,
			border-color 0.2s ease;
	}

	.links a:hover {
		color: var(--accent);
	}

	.links a.active {
		color: var(--accent);
		border-bottom-color: var(--accent);
	}

	.app-link {
		background: var(--accent) !important;
		color: #fff !important;
		padding: 0.55rem 1.1rem !important;
		display: flex;
		align-items: center;
		gap: 10px;
		line-height: 100%;
		border-radius: 0.5rem;
		font-weight: 600;
		font-size: 0.95rem;
		box-shadow: 0 2px 6px rgba(35, 55, 255, 0.15);
		transition: all 0.2s ease;
	}

	.app-link img {
		width: 20px;
		height: 20px;
		display: block;
		margin: 0;
	}

	.app-link:hover {
		background: var(--accent-hover);
		box-shadow: 0 3px 8px rgba(35, 55, 255, 0.25);
	}

	/* --- Responsive --- */
	@media (max-width: 768px) {
		.links {
			gap: 1rem;
		}
		.links a {
			font-size: 0.95rem;
		}
		.app-link {
			padding: 0.5rem 0.9rem;
		}
	}
</style>
